{
  "$schema": "https://json.schemastore.org/package.json",
  "type": "module",
  "scripts": {
    "build-chrome": "node build-scripts/build-chrome.mjs",
    "build-firefox": "node build-scripts/build-firefox.js",
    "build-safari": "node build-scripts/build-safari.js",
    "package-chrome-release": "zip -r build/chrome-extension.zip build/chrome/",
    "package-firefox-release": "zip -r build/firefox-extension.zip build/firefox/",
    "package-safari-release": "zip -r build/safari-extension.zip build/safari/",
    "test": "jest --config jest.config.cjs --detectOpenHandles --no-cache",
    "build": "webpack --mode production",
    "jest:clearCache": "jest --clearCache --config jest.config.cjs",
    "start": "webpack serve --config webpack.config.js",
    "type-check": "tsc --noEmit",
    "build:chrome": "webpack --config webpack.config.js && cp -r browsers/chrome/* build/chrome/",
    "test:playwright": "playwright test --config playwright.config.js",
    "build:service-worker": "webpack --config webpack.service-worker.js"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/plugin-transform-class-properties": "^7.22.0",
    "@babel/plugin-transform-object-rest-spread": "^7.22.0",
    "@babel/plugin-transform-runtime": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-react": "^7.22.5",
    "@babel/runtime": "^7.26.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.3.17",
    "@types/reselect": "^2.0.27",
    "babel-jest": "^29.7.0",
    "babel-loader": "^8.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "core-js": "^3.39.0",
    "css-loader": "^7.1.2",
    "fs-extra": "^11.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lru-cache": "^10.1.0",
    "path-browserify": "^1.0.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.0.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "@types/redux-persist": "^4.0.0",
    "preset-react": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^3.1.0",
    "reselect": "^5.1.1",
    "terser": "^5.36.0",
    "webextension-polyfill": "^0.12.0"
  }
}
