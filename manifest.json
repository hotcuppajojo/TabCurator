{
  "manifest_version": 3,
  "name": "TabCurator",
  "version": "1.0.0",
  "description": "Advanced tab management with intelligent grouping and optimization",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "scripting",
    "activeTab",
    "bookmarks",
    "declarativeNetRequest"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "scripts": "vendor/browser-polyfill.js",
    "default_popup": "popup/popup.html",
    "default_title": "TabCurator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules/rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "vendor/browser-polyfill.js",
        "content/content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/browser-polyfill.js",
        "test/test.html",
        "options/options.html",
        "options/options.js",
        "options/options.css",
        "popup/popup.html",
        "popup/popup.js",
        "popup/popup.css",
        "utils/*",
        "background/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "<all_urls>"
  ]
}